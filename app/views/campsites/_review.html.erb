<% @campsite.reviews.each do |review| %>
  <div class="reviews">
    <div class="row blockquote review-item">
      <div class="col-md-2 text-center">
        <img class="rounded-circle reviewer" src="https://kitt.lewagon.com/placeholder/users/ssaunier" width="100">
        <div class="caption">
          <small>Joe</small>
        </div>

      </div>
      <div class="col-md-10">
        <h4><%= review.title %></h4>
        <% review.rating.to_i.times do %>
          <i class="fa fa-star"></i>
        <% end %>
        <div class="ratebox text-center" data-id="0" data-rating=""></div>
        <p class="review-text"><%= review.content %></p>
        <small class="review-date"><%= review.created_at.strftime("%d-%m-%Y")
 %></small>
      </div>
    </div>
  </div>
<% end %>



