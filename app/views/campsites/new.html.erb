<%= simple_form_for [@user, @campsite] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :address %>
  <%= f.input :postcode %>
  <%= f.input :city %>
  <%= f.input :country, as: :string %>
  <%= f.input :max_guests %>
  <%= f.input :amenities %>
  <%= f.button :submit, class: "btn-primary" %>
<% end %>
